<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             android:background="@color/colorInActiveTab"
             tools:context="tk.vn.app.presentation.HomeFragment">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:tools="http://schemas.android.com/tools"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/scrollablContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/content"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/credit_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/default_padding"
            card_view:cardCornerRadius="3dp">

            <!--<LinearLayout-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="match_parent"-->
                <!--android:orientation="vertical">-->
            <RelativeLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:padding="@dimen/default_padding"
                android:layout_height="wrap_content" >


                <TextView
                    android:id="@+id/text_credit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:text="312"
                    android:layout_margin="0dp"
                    android:textColor="@color/font_Dark"
                    android:textSize="@dimen/font_size_h1"/>

                <ImageView
                    android:id="@+id/image_coin"
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/text_credit"
                    app:srcCompat="@drawable/coin"/>

                <TextView
                    android:id="@+id/CREDITS"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/image_coin"
                    android:layout_below="@+id/text_credit"
                    android:layout_toRightOf="@+id/image_coin"
                    android:text="CREDITS"
                    android:textColor="@color/font_Dark"
                    android:textSize="@dimen/font_size_h4"/>

                <TextView
                    android:id="@+id/credit_usage_help"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf = "@+id/text_credit"
                    android:paddingLeft="@dimen/double_default_padding"
                    android:paddingTop="@dimen/double_default_padding"
                    android:text="@string/text_credit_usage_help"
                    android:textColor="@color/font_Dark"
                    android:textSize="@dimen/font_size_h4"/>

            </RelativeLayout>
            <!--</LinearLayout>-->
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/time_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/default_padding"
            android:layout_marginLeft="@dimen/default_padding"
            android:layout_marginRight="@dimen/default_padding"
            card_view:cardCornerRadius="3dp">

            <!--<LinearLayout-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="match_parent"-->
                <!--android:orientation="vertical">-->

            <RelativeLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:padding="@dimen/default_padding"
                android:layout_height="wrap_content" >
                    <TextView
                        android:id="@+id/next_card_timing"
                        android:layout_width="328dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:text="Next card will get unlocked in 1 h 13 min through a notification"
                        android:textColor="@color/font_Dark"
                        android:textSize="@dimen/font_size_h4"
                        tools:layout_editor_absoluteY="206dp"
                        tools:layout_editor_absoluteX="8dp"/>
            </RelativeLayout>
            <!--</LinearLayout>-->
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/default_padding"
            android:layout_marginLeft="@dimen/default_padding"
            android:layout_marginRight="@dimen/default_padding"
            card_view:cardCornerRadius="3dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <com.google.android.gms.ads.AdView
                    xmlns:ads="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/adView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/default_padding"
                    android:background="@color/colorWhite"
                    ads:adSize="FULL_WIDTHx250"
                    ads:paddingEnd="@dimen/default_padding"
                    ads:paddingStart="@dimen/default_padding"
                    android:elevation="3dp"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>

    </LinearLayout>
    </ScrollView>
    </RelativeLayout>
</FrameLayout>
